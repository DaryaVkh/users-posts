{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": "./",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["es6"],
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "**.ts"
    ],
    "exclude": [
        "./frontend"
    ]
}
